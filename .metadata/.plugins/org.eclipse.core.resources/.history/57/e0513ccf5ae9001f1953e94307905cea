package questions;
//Program to print student info question given at: https://www.lintcode.com/problem/3357/
public class PrintStudentInfo {
	public static void main(String args[]) {
		int [] marks=new int[3];
		marks[0]=80;
		marks[1]=89;
		marks[2]=45;
		Student stu=new Student("Dheeraj saini",23,marks);
		System.out.println("Name: "+stu.get_name());
		System.out.println("Age of student is:"+stu.get_age());
		System.out.println("Maximum marks :"+stu.get_course());
	}
}

class Student{
	//making variable as private to increase security 
	private String name;
	private int age;
	private int[] marks;
	//Constructor 
	Student(String Name, int Age, int[] Marks){
		this.name=Name;
		this.age=Age;
		this.marks[0]=Marks[0];
		this.marks[1]=Marks[1];
		this.marks[2]=Marks[2];
	}
	
	public String get_name() {
		return name;
	}
	public int get_age() {
		return age;
	}
	public int get_course() {
		int max=marks[0];
		
		if(marks[1]>=max && marks[1]>=marks[2]) {
			max=marks[1];
		}else if(marks[2]>=max && marks[2]>=marks[1]) {
			max=marks[2];
		}
		return max;
	}
	
}