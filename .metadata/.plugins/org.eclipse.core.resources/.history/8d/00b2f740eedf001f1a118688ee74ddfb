package practice;
import java.util.*;
//Write a program to merge two sorted array
public class PracticeArray9 {
	public static void main(String args[]) {
		Scanner scan=new Scanner(System.in);
		//first array
		System.out.println("Please enter the size of 1st array:");
		int size1=scan.nextInt();
		int []array1=new int[size1];
		//2nd array
		System.out.println("Please enter the size of 2nd array:");
		int size2=scan.nextInt();
		int []array2=new int[size2];
		
		//3rd array
		int maxSize=size1+size2;
		int mergedarray[]=new int[maxSize];
		
		//input of 1st array
		for(int i=0;i<size1;i++) {
			System.out.println("Please enter the "+(i+1)+"th element of 1st array:");
			array1[i]=scan.nextInt();
		}
		//input of 2nd array
		for(int i=0;i<size2;i++) {
			System.out.println("Please enter the "+(i+1)+"th element of 2nd array:");
			array2[i]=scan.nextInt();
		}
		
		System.out.println("Your both arrays are given below:");
		//printing 1st array:
		for(int i:array1) {
			System.out.print(i+" ");
		}
		//printing 2nd array:
		for(int i:array2) {
			System.out.print(i+" ");
		}
		
		//putting element in 3rd array as per conditions:
		for(int i=0;i<maxSize;i++) {
			int index1=0;
			int index2=0;
			
			if(array1[index1]<array2[index2]) {
				mergedarray[i]=array1[index1];
				index1++;
			}else {
				mergedarray[i]=array2[index2];
				index2++;
			}
		}
		//printing final array:
		System.out.println("Here is merged array:");
		for(int i: mergedarray) {
			System.out.print(i+" ");
		}
		
		
	}

}
