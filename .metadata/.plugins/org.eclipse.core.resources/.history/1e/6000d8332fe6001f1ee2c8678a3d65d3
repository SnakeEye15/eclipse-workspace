package learn;

import java.util.Scanner;

public class LearnString1 {

    /**
     * Checks if the input string matches the search word at the specified position.
     *
     * @param inputString the input string to search in
     * @param searchWord  the word to search for
     * @param startingIndex the starting index to begin the search from
     * @return true if the search word matches at the specified position, false otherwise
     */
    public static boolean matchesAtPosition(String inputString, String searchWord, int startingIndex) {
        char[] inputArray = inputString.toCharArray();
        char[] searchArray = searchWord.toCharArray();

        int i = startingIndex;
        int j = 0;

        while (i < inputArray.length && j < searchArray.length) {
            if (inputArray[i] != searchArray[j]) {
                return false;
            }
            i++;
            j++;
        }

        return true;
    }

    /**
     * Prompts the user to enter a string and returns the input.
     *
     * @param scanner the Scanner object to use for input
     * @return the input string
     */
    private static String getInputString(Scanner scanner) {
        System.out.println("Please enter the string here: ");
        return scanner.nextLine();
    }

    /**
     * Prompts the user to enter a word to search for and returns the input.
     *
     * @param scanner the Scanner object to use for input
     * @return the search word
     */
    private static String getSearchWord(Scanner scanner) {
        System.out.println("Please enter the word you want to search:");
        return scanner.next();
    }

    public static void main(String args[]) {
        Scanner scanner = new Scanner(System.in);

        String inputString = getInputString(scanner);
        char repeatSearch = 'Y';

        while (repeatSearch == 'Y') {
            String searchWord = getSearchWord(scanner);

            // Traverse through the complete string.
            for (int i = 0; i < inputString.length(); i++) {
                // Check if the search word matches at the current position.
                if (matchesAtPosition(inputString, searchWord, i)) {
                    System.out.print(i + " ");
                }
            }

            System.out.println();
            System.out.println("------------///------------");

            System.out.println("Do you want to search any other word also in same string? [Y or N]");
            repeatSearch = scanner.next().charAt(0);
        }

        scanner.close();
    }
}