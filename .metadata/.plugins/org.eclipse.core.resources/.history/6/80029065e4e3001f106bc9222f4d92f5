package practice;

import java.util.Scanner;

public class MatrixMultiplier {

    /**
     * Checks if matrix multiplication is possible between two matrices.
     * 
     * @param columnsInFirstMatrix  the number of columns in the first matrix
     * @param rowsInSecondMatrix    the number of rows in the second matrix
     * @return true if matrix multiplication is possible, false otherwise
     */
    public static boolean isMatrixMultiplicationPossible(int columnsInFirstMatrix, int rowsInSecondMatrix) {
        // Check if the number of columns in the first matrix matches the number of rows in the second matrix
        return columnsInFirstMatrix == rowsInSecondMatrix;
    }

    /**
     * Multiplies two matrices together.
     * 
     * @param firstMatrix  the first matrix to multiply
     * @param secondMatrix the second matrix to multiply
     * @return the result of multiplying the two matrices
     */
    public static int[][] multiplyMatrices(int[][] firstMatrix, int[][] secondMatrix) {
        // Get the dimensions of the matrices
        int rowsInFirstMatrix = firstMatrix.length; // Number of rows in the first matrix
        int columnsInFirstMatrix = firstMatrix[0].length; // Number of columns in the first matrix
        int columnsInSecondMatrix = secondMatrix[0].length; // Number of columns in the second matrix

        // Create a new matrix to store the result
        int[][] result = new int[rowsInFirstMatrix][columnsInSecondMatrix];

        // Loop through each element in the result matrix
        for (int i = 0; i < rowsInFirstMatrix; i++) {
            for (int j = 0; j < columnsInSecondMatrix; j++) {
                // Loop through each element in the first matrix that contributes to this element in the result
                for (int k = 0; k < columnsInFirstMatrix; k++) {
                    // Multiply the corresponding elements from the first and second matrices and add to the result
                    result[i][j] += firstMatrix[i][k] * secondMatrix[k][j];
                }
            }
        }

        // Return the result matrix
        return result;
    }

    /**
     * Takes input from the user to populate a matrix.
     * 
     * @param scanner   the Scanner object to use for input
     * @param rows      the number of rows in the matrix
     * @param columns   the number of columns in the matrix
     * @return the populated matrix
     */
    public static int[][] takeInputFromUser(Scanner scanner, int rows, int columns) {
        // Create a new matrix to store the input
        int[][] matrix = new int[rows][columns];

        // Loop through each element in the matrix
        for (int i = 0; i < rows; i++) {
            for (int j = 0; j < columns; j++) {
                // Prompt the user to enter the value for this element
                System.out.print("Enter element (" + i + "," + j + "): ");
                // Read the user's input and store it in the matrix
                matrix[i][j] = scanner.nextInt();
            }
        }

        // Return the populated matrix
        return matrix;
    }

    /**
     * Prints a matrix to the console.
     * 
     * @param matrix the matrix to print
     */
    public static void printMatrix(int[][] matrix) {
        // Loop through each element in the matrix
        for (int i = 0; i < matrix.length; i++) {
            for (int j = 0; j < matrix[0].length; j++) {
                // Print the value of this element
                System.out.print(matrix[i][j] + " ");
            }
            // Print a newline after each row
            System.out.println();
        }
    }

    public static void main(String[] args) {
        // Create a new Scanner object to read input from the user
        Scanner scanner = new Scanner(System.in);

        // Prompt the user to enter the dimensions of the first matrix
        System.out.print("Enter number of rows in first matrix: ");
        int rowsInFirstMatrix = scanner.nextInt();
        System.out.print("Enter number of columns in first matrix: ");
        int columnsInFirstMatrix = scanner.nextInt();

        // Prompt the user to enter the dimensions of the second matrix
        System.out.print("Enter number of rows in second matrix: ");
        int rowsInSecondMatrix = scanner.nextInt();
        System.out.print("Enter number of columns in second matrix: ");
        int columnsInSecondMatrix = scanner.nextInt();

        // Check if matrix multiplication is possible
        if (isMatrixMultiplicationPossible(columnsInFirstMatrix,