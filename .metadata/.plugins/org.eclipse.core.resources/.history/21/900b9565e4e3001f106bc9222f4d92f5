//Function to check whether the production of matrix is possible or not?

package practice;
import java.util.*;
//Program to print the product of 2 matrices:
public class PracticeMatrix1 {

public static boolean IsProdPossible(int c1,int r2) {

	if(c1==r2) {

	return true;}

	else {

		return false;

	}

}

//Function to get product matrix:

public static int[][] Prod(int[][] arr1, int[][] arr2,int r1,int r2,int c1,int c2) {

	int arr3[][]=new int[r1][c2];

	

	for(int i=0;i<r1;i++) {

		for(int j=0;j<c2;j++) {

			for(int k=0;k<r2;k++) {

				arr3[i][j]+=arr1[i][k]*arr2[k][j];

			}

		}

	}

	

	return arr3;

}

//Function to take input for array:

public static int[][] takeInputFromUser(int arr1[][],int r1,int c1){

	Scanner in=new Scanner(System.in);

	System.out.println("Please enter the element of matrix: ");

	int [][]demo=new int[r1][c1];

	for(int i=0;i<r1;i++) {

		for(int j=0;j<c1;j++) {

			System.out.println("Please enter the ("+i+","+j+") element of array:");

			demo[i][j]=in.nextInt();

		}

	}

	return demo;

}

public static void main(String args[]) {

	Scanner scan=new Scanner(System.in);

	System.out.println("Enter the Rows in first array: ");

	try {

		int r1=scan.nextInt();

		System.out.println("Enter the column in first array: ");

		int c1=scan.nextInt();

		System.out.println("Enter the Rows in Second array: ");

		int r2=scan.nextInt();

		System.out.println("Enter the Column in Second array: ");

		int c2=scan.nextInt();

		

		if(IsProdPossible(c1,r2)) {

			int arr1[][]=new int[r1][c1];

			int arr2[][]=new int[r2][c2];

			System.out.println("Please enter the valuse of 1st array:");

			arr1=takeInputFromUser(arr1,r1,c1);

			System.out.println("Please enter the valuse of 2nd array:");

			arr2=takeInputFromUser(arr2,r2,c2);

			

			//Creating matrix for storing element of new product matrix

			int arr3[][]=Prod(arr1,arr2,r1,r2,c1,c2);

			//for printing the element of new matrix:

			for(int i=0;i<r1;i++) {

				for(int j=0;j<c2;j++) {

					System.out.print(arr3[i][j]+" ");

				}

				System.out.println();

			}

		}else {

			System.out.println("Product of mentioned Matrix is not possible.");

		}

	}catch(Exception e) {

		System.err.print(e.getMessage());

	}

	scan.close();

}}
